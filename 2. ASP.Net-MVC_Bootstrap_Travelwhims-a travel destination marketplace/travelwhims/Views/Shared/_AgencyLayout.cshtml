<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>


        div.gallery {
            margin: 15px;
            border: 1px solid #ccc;
            float: left;
            width: 252px;
        }

            div.gallery:hover {
                margin-bottom: 13px;
                margin-top: 13px;
                border: 3px solid #777;
                border-color: mediumseagreen;
                width: 252px;
            }

            div.gallery img {
                object-fit: cover;
                width: 250px;
                height: 200px;
            }

        div.desc {
            padding: 30px;
            text-align: center;
        }

        div.clearfloat {
            float: unset;
        }
    </style>

</head>
<body>

    <div>
        <nav class="navbar navbar-expand bg-black bg-opacity-75 navbar-dark fixed-top" style=" height:60px; color:whitesmoke; ">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link " href="/Travelagency/Home">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/Travelagency/Home" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Packages
                        </a>
                        <ul class="dropdown-menu " style=" margin-top:10px;">
                            <li><a class="dropdown-item navbar-light" href="/Travelagency/MyPackages">My Packages</a></li>
                            <li><a class="dropdown-item" href="/Travelagency/CreatePackage">Create Package</a></li>

                        </ul>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="/Travelagency/Financial">Financial</a>
                    </li>
                    @*<li class="nav-item">
                        <a class="nav-link" href="">Blog</a>
                    </li>*@
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/Travelagency/Home" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            
                                <img src="~/images/travelagencies/@Session["propic"]" alt="" style="object-fit:cover; border-radius:50px;" width="45" height="45">

                            @Session["agencyname"]
                        </a>
                        <ul class="dropdown-menu " style=" margin-top:10px;">
                            <li><a class="dropdown-item navbar-light" href="/Travelagency/MyProfile">My Profile</a></li>
                            <li><a class="dropdown-item" href="/Travelagency/Messages">Messages</a></li>
                            <li><a class="dropdown-item " style="background-color:darkred; color:whitesmoke;" href="/Public/Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </div><br>


    <div>
        <br> <br>
        @RenderBody()
    </div>


    <br><br><br><br>
    <br><br>
    <div style="clear:both;">

        &copy; Travel Whims 2022
    </div>
</body>
</html>
