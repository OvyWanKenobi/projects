@model travelwhims.Models.TWdatabase.Package

@{
    ViewBag.Title = "Package";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}



<div >
    <center>
        @if (Model.pac_thumbnail == null)
        {
        <img src="~/images/public/noimage.png" alt="pac_thumbnail" style="object-fit:cover; padding:10px;" width="1200" height="400">
        }
        else
        {
            <img src="~/images/packages/@Model.pac_thumbnail" alt="pac_thumbnail" style="object-fit:cover; padding:10px;" width="1200" height="400">
        }
    </center>

    <div class="row">


        <div class="col-3" style="margin-left:100px; width:800px;">
            <h1 style="color: Highlight"><b> @Model.pac_title</b></h1>
            <p style="font-size:larger;">By: <a class="link-success" style="text-decoration-line:unset;" href="/Public/TravelAgency/@Model.pac_ta_fk"> @Model.TravelAgency.ta_name</a> (@Model.TravelAgency.ta_rating/5) </p>
            <h3>Destination:  @Model.pac_destinations</h3>
            <h4>From  @Model.pac_tourdate.ToLongDateString() to   @Model.pac_returndate.ToLongDateString() </h4>
            <table>
                <tr>

                    <th><h4>Category :</h4></th>
                    <th><h4>@Model.pac_category</h4></th>

                </tr>

                <tr>

                    <th><h4>Class :</h4></th>
                    <th><h4>@Model.pac_class</h4></th>

                </tr>
                <tr>

                    <th>
                        <h4>
                            Price :
                        </h4>
                    </th>
                    <th><h4>@Model.pac_price</h4></th>

                </tr>
                <tr>

                    <th><h5>Detail :</h5></th>
                    <th><h5>@Model.pac_bio</h5></th>

                </tr>

                @if ((Model.pac_prerequisite) != null)
                {

                    <tr>
                        <th><h5>Pre-requisite :</h5></th>
                        <th> <h5>@Model.pac_prerequisite</h5></th>

                    </tr>

                }

            </table>


        </div>
        
        <div class="col-3" style="width:400px; margin-top:100px;" >
            <center>
                
                <div style="width: 320px;">

                    @{ 
                        var memberleft = Model.pac_maxmember - Model.CustomerPackages.Count();
                    }
                <a class="btn btn-outline-success" style="border-width:1px; pointer-events:none; cursor:default; width:150px; height:115px;" href="">
                    <h3>@Model.CustomerPackages.Count()</h3> <h5>Member Enrolled</h5>
                </a>
                <a class="btn btn-success" style="border-width:1px; pointer-events:none; cursor:default; height:115px; width:150px;" href="">
                    <h3> @memberleft </h3> <h5>Member <br /> Left</h5>
                </a>

                </div> 
                <br /> <br />
                <h4 style="width: 320px; border: solid mediumseagreen;  border-bottom-color: darkslategrey; border-width: 1px 10px 10px 1px; padding: 15px;">  <a class="btn btn-success"  href="/Public/Signup">Sign Up</a> <br /> NOW! <br />To Book Your Dream Destination</h4>

                <br />
              
            </center>
          </div>


    </div>




</div>

